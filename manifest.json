{
  "name"              : "Fixed Table Header",
  "version"           : "1.0",
  "description"       : "Fix a table header when scrolling through long tables.",
  "manifest_version"  : 2,
  "background"        : {
    "scripts"     : [
      "backgroundScript.js"
    ]
  },
  "content_scripts"   : [
    {
      "matches" : ["<all_urls>"],
      "js"      : ["contentScript.js"]
    }
  ],
  "permissions"       : [
    "activeTab",
    "contextMenus"
  ]
}